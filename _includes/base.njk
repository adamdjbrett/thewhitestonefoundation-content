<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title or metadata.title }}</title>
    {% if description %}<meta name="description" content="{{ description }}">{% endif %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;900&family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/whitestone-logo.png">
    {% include "schema-website.njk" %}
    {% include "schema-organization.njk" %}
  </head>
  <body>
    <header class="site-header">
      <h1><a href="/"><img src="/images/whitestone-logo.png" alt="{{ metadata.title }}" style="max-height: 64px;"></a></h1>
      {% if metadata.description %}<p class="site-description">{{ metadata.description }}</p>{% endif %}
      {% if metadata.nav %}
      <nav class="site-nav" aria-label="Main">
        {% for item in metadata.nav %}
        {% if item.children %}
        <div class="nav-item has-dropdown">
          <a href="{{ item.url }}">{{ item.label }}</a>
          <div class="nav-dropdown" role="menu">
            {% for child in item.children %}
            <a role="menuitem" href="{{ child.url }}">{{ child.label }}</a>
            {% endfor %}
          </div>
        </div>
        {% else %}
        <a href="{{ item.url }}">{{ item.label }}</a>
        {% endif %}
        {% endfor %}
      </nav>
      <hr class="nav-rule">
      {% endif %}
    </header>
    <main>
      {% if showTitle and title %}
      <h1>{{ title }}</h1>
      {% endif %}
      {{ content | safe }}
    </main>
    <footer class="site-footer">
      <p>Â© Copyright {{ metadata.footer.startYear }}-{{ buildinfo.now | dateFilter("yyyy") }}. {{ metadata.footer.text }}</p>
    </footer>
  </body>
</html>
